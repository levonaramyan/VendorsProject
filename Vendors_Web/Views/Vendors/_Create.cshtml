@model Vendors_Web.ViewModels.CreateVendorViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">New Vendor</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Close">&times;</button>
    </div>
    <form asp-action="Create" asp-controller="Vendors" method="post" id="Create-Vendor-Submit" class="form-horizontal">
        <div class="modal-body">
            <div class="row pb-4">
                <div class="col-lg">
                    <label asp-for="VendorName"></label>
                    <input asp-for="VendorName" class="form-control" />
                    <span asp-validation-for="VendorName" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="ContactPerson"></label>
                    <input asp-for="ContactPerson" class="form-control" />
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="VendorType"></label>
                    <select asp-for="VendorType" class="form-control">
                        <option disabled selected value="">Select</option>
                        @foreach (var item in ViewBag.VendorTypes)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="col-lg">
                    <label asp-for="ContactTitle"></label>
                    <input asp-for="ContactTitle" class="form-control" />
                    <span asp-validation-for="ContactTitle" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="Street"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
            </div>
            <div class="row pb-4">
                <div class="col-lg">
                    <label asp-for="CountryId"></label>
                    <select asp-for="CountryId" class="form-control">
                        <option disabled selected value="">Select</option>
                        @foreach (var item in ViewBag.Countries)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="col-lg">
                    <label asp-for="City"></label>
                    <select asp-for="City" class="form-control">
                        <option disabled selected value="">Select</option>
                    </select>
                </div>
                <div class="col-lg">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="Fax"></label>
                    <input asp-for="Fax" class="form-control" />
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row pb-4">
                <div class="col-lg">
                    <label asp-for="SalesPhone"></label>
                    <input asp-for="SalesPhone" class="form-control" />
                    <span asp-validation-for="SalesPhone" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="SalesFax"></label>
                    <input asp-for="SalesFax" class="form-control" />
                    <span asp-validation-for="SalesFax" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="SalesEmail"></label>
                    <input asp-for="SalesEmail" class="form-control" />
                    <span asp-validation-for="SalesEmail" class="text-danger"></span>
                </div>
                <div class="col-lg">

                </div>
                <div class="col-lg">

                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-default" data-dismiss="modal">Cancel</button>
            <a asp-action="Create" asp-controller="Vendors" id="btnAdd" class="btn btn-primary">Save</a>
        </div>
    </form>
</div>
